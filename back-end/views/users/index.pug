extends ../layout/common.pug
   
block content
    h1
        span.mr-3 Users
        
    .d-flex.align-items-center    
        form.ml-auto(action="/users/search", method="GET" class="d-flex")
            input(type="text", name="q" class="form-control" value=keyword)
            button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Action
        each user in users
            tr
                td
                    img(src=user.avatar, width="64")
                td= user.name
                td= user.phone
                td           
                    a.btn.btn-primary(href='/users/' + user.id) View